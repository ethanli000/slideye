$titleFont = "Lucida Console", Monaco, monospace
$contentFont = "Lucida Grande", Helvetica, Arial, sans-serif
$rightTabWidth = 250px
$rightTabFooterHeight = 190px

body,div,p,h1
  margin:0

body
  margin:0
  padding:0
  width: 100%
  height: 100%
  background-color: #EEE
  text-align: center
  font: 10px $contentFont

.main-container
  width: 100%
  height: 100%
  min-height: 560px
  background-color: #555
  text-align: left

.tab
  float: left
  width: $rightTabWidth
  height: 100%
  background-color: #90EACD

.frame
  position: relative
  margin-left: 250px
  height: 100%
  background-color: #BAB6B4


