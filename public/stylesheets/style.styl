$menuFont = 'Open Sans Condensed', sans-serif
$contentFont = "Lucida Grande", Helvetica, Arial, sans-serif

$rightTabWidth = 220px
$bottomTabHeight = 50px

div,p,h1
  margin:0
  padding:0

html,body
  margin:0
  padding:0
  height: 100%

body
  text-align: center
  font: 10px $contentFont

.main-container
  display:inline-block
  width: 100%
  height: 100%
  min-width: 800px
  min-height: 560px
  text-align: left

.tab
  float: left
  position: relative
  z-index: 10
  width: $rightTabWidth
  height: 100%
  -webkit-box-shadow: 2px 0px 10px -1px #ccc
  -moz-box-shadow: 2px 0px 10px -1px #ccc
  box-shadow: 4px 0px 10px -1px #ccc

@import 'includes/tab'

.frame
  margin-left: $rightTabWidth
  height: 100%
  background-color: #BAB6B4

@import 'includes/frame'

