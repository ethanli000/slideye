$menuFont = 'Open Sans Condensed', sans-serif
$contentFont = "Lucida Grande", Helvetica, Arial, sans-serif
$rightTabWidth = 200px
$rightTabFooterHeight = 190px
$mainNaviHeight = 60px

html,body,div,p,h1
  margin:0
  padding:0

html,body
  margin:0
  padding:0
  height: 100%

body
  //background-color: #EEE
  text-align: center
  font: 10px $contentFont

.main-container
  display:inline-block
  width: 100%
  height: 100%
  min-height: 560px
  //background-color: #555
  text-align: left

.tab
  float: left
  width: ($rightTabWidth - 4px)
  height: 100%
  -webkit-box-shadow: 2px 0px 10px -1px #ccc
  -moz-box-shadow: 2px 0px 10px -1px #ccc
  box-shadow: 4px 0px 10px -1px #ccc
  //background-color: #ccc

.tab .top
  background-color: #888
  min-height: 100%
  max-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -($rightTabFooterHeight)

.tab .top .push
  height: $rightTabFooterHeight

.tab .bottom
  height: $rightTabFooterHeight
  //background-color: #333

#logo
  height: 50px
  background-color: #FEEA99

/*memu start*/
#menu ul
  margin: 0px
  padding: 7px 0
  text-align: right
  list-style-type: none
  opacity:1

#menu ul li
  padding: 1px 10px 1px 0

#menu ul li a
  font-size: 2em
  text-decoration: none
  color: #eee
  font-family:$menuFont
/*memu end*/

/*footer start*/
#footer
  height: $mainNaviHeight
  background-color: #266

#footer .contact
  text-align: right
  padding: 16px 12px 12px
  font-family: $menuFont
  font-size: 1.4em
  line-height: 1.2em
  color: #eee
/*footer end*/

.frame
  position: relative
  margin-left: $rightTabWidth
  height: 100%
  background-color: #BAB6B4

#main-content
  background-color: #FAF6F4
  width: 100%
  min-height: 100%
  height: auto !important
  height: 100%
  margin: 0 auto -($mainNaviHeight)

#main-content .push
  height: $mainNaviHeight

#navi
  height: $mainNaviHeight
  background-color: #F0F0DD
