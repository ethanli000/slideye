/*tab start*/
$leftTabFooterHeight = $bottomTabHeight
$leftTabbottomHeight = 130px + $leftTabFooterHeight
$leftTabPaddingRight = 10px;
$leftTabBGColor = #EDEDED
$leftTabTextColor = #555
$leftTabMainColor = #299

left-arrow(range,style,bgc,c)
  border-top: range style bgc
  border-left: range*9 style c
  border-bottom: range style bgc

.tab
  .top
    background-color: $leftTabBGColor
    min-height: 100%
    max-height: 100%
    height: auto !important
    height: 100%
    margin: 0 auto -($leftTabbottomHeight)
    .push
      height: $leftTabbottomHeight
  .bottom
    height: $leftTabbottomHeight

#logo
  height: 50px
  background-image: url('/images/logo.png')
  background-repeat: no-repeat
  background-size: 180px 50px
  background-position: right $leftTabPaddingRight top 0px
  a#home
    display: inline-block
    height: 50px
    width: 100%

#sub-content
  ul
    margin: 0
    padding: 0 $leftTabPaddingRight 0 0
    text-align: right
    list-style-type: none
    li
      padding: 1px 0 1px        
      a
        font-size: 1.8em
        text-decoration: none
        color: $leftTabTextColor
        font-family: $menuFont
        .arrow
          left-arrow(3px,solid,$leftTabBGColor,$leftTabTextColor)
          //display: inline-block
          margin: 2px 0 2px 2px
          display: none
        &:hover
          color: lighten($leftTabMainColor,18%)
          .arrow
            left-arrow(3px,solid,$leftTabBGColor,lighten($leftTabMainColor,18%))
            display: inline-block
            margin: 2px 2px 2px 0
        
    li.selected
      a
        color: lighten($leftTabMainColor,15%)
      .arrow
        left-arrow(3px,solid,$leftTabBGColor,lighten($leftTabMainColor,15%))
        display: inline-block
        margin: 2px 2px 2px 0

/*memu start*/

#menu
  z-index:2
  position: relative
  padding: 0 $leftTabPaddingRight 0 0
#menu ul
  margin: 0px
  padding: 7px 0
  text-align: right
  list-style-type: none
  li
    padding: 1px 0 1px 0
    a
      font-size: 2em
      text-decoration: none
      color: $leftTabTextColor
      font-family:$menuFont
      .arrow
        left-arrow(3px,solid,$leftTabBGColor,$leftTabTextColor)
        //display: inline-block
        margin: 2px 0 2px 2px
        display: none
      &:hover
        color: lighten($leftTabMainColor,8%)
        .arrow
          left-arrow(3px,solid,$leftTabBGColor,lighten($leftTabMainColor,8%))
          display: inline-block
          margin: 4px 2px 4px 0

#menu ul li.selected a
  color: lighten($leftTabMainColor,8%)
  .arrow
    left-arrow(3px,solid,$leftTabBGColor,lighten($leftTabMainColor,8%))
    display: inline-block
    margin: 4px 2px 4px 0
          
/*memu end*/

/*footer start*/
#footer
  position: relative
  z-index: 1
  height: $leftTabFooterHeight
  background-color: $leftTabMainColor
  .content
    padding: 5px $leftTabPaddingRight 5px

#footer a
  float: right
  display: inline-block
  width: 30px
  height:30px
  background-repeat: no-repeat
  background-size: 30px 30px
  margin:0 3px

set_social_icon(name)
  background-image: url(s('/images/icons/%s_off.png',name))
  &:hover
    background-image: url(s('/images/icons/%s_on.png',name))

#weibo
  set_social_icon(weibo)
  
#insta
  set_social_icon(insta)

#linkedin
  set_social_icon(linkedin)

#facebook
  set_social_icon(facebook)

#mail
  set_social_icon(mail)

#copyright
  margin-top: 5px
  padding-top: 2px
  clear: both
  text-align: right
  font-family: $menuFont
  font-size: 1.2em
  line-height: 1em
  color: #FFF
  border-top:solid 1px
/*footer end*/
